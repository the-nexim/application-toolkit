{
  "name": "@nexim/eleventy-config",
  "version": "1.0.0",
  "description": "Enhanced production ready eleventy config.",
  "keywords": [
    "eleventy",
    "ssg",
    "context",
    "typescript",
    "nexim"
  ],
  "homepage": "https://github.com/the-nexim/application-toolkit/tree/next/packages/eleventy-config#readme",
  "bugs": {
    "url": "https://github.com/the-nexim/application-toolkit/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/the-nexim/application-toolkit",
    "directory": "packages/eleventy-config"
  },
  "license": "AGPL-3.0-only",
  "author": "S. Amir Mohammad Najafi <njfamirm@gmail.com> (https://www.njfamirm.ir)",
  "contributors": [
    "Arash Ghardashpoor <arash.qardashpoor@gmail.com> (https://www.agpagp.ir)"
  ],
  "type": "module",
  "main": "./src/main.js",
  "files": [
    "**/*.{js,mjs,cjs,map,d.ts,html,md,LEGAL.txt}",
    "LICENSE",
    "!**/*.test.js",
    "!demo/**/*"
  ],
  "scripts": {
    "build": "wireit",
    "test": "wireit",
    "watch": "wireit"
  },
  "dependencies": {
    "11ty.ts": "^0.0.5",
    "@11ty/eleventy": "3",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@11ty/eleventy-upgrade-help": "3",
    "@alwatr/package-tracer": "^5.0.0",
    "@sindresorhus/slugify": "^2.2.1",
    "@swc/html": "^1.10.1",
    "cssnano": "^7.0.6",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "postcss": "^8.4.49",
    "postcss-import": "^16.1.0",
    "postcss-preset-env": "^10.1.2",
    "postcss-variable-compress": "^3.0.0",
    "postcss-viewport-unit-fallback": "^1.0.1",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@alwatr/logger": "^5.0.0",
    "@alwatr/nano-build": "^5.0.0",
    "@alwatr/type-helper": "^5.0.0",
    "@nexim/typescript-config": "^1.0.1",
    "@types/11ty__eleventy-plugin-directory-output": "^1.0.0",
    "@types/eleventy-plugin-toc": "^1.1.0",
    "@types/markdown-it": "^14.1.2",
    "@types/markdown-it-attrs": "^4.1.3",
    "@types/node": "^22.10.2",
    "@types/postcss-import": "^14.0.3",
    "ava": "^6.2.0",
    "typescript": "^5.7.2",
    "wireit": "^0.14.9",
    "workbox-build": "^7.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "wireit": {
    "build": {
      "command": "yarn node src/lib/build.mjs"
    },
    "serve": {
      "command": "wds",
      "service": true
    },
    "start": {
      "dependencies": [
        "build",
        "serve"
      ]
    },
    "watch": {
      "dependencies": [
        "watch:11ty",
        "serve"
      ]
    },
    "watch:11ty": {
      "command": "yarn run build:11ty -- --watch",
      "service": true
    }
  }
}
