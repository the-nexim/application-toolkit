{
  "name": "@nexim/eleventy-config",
  "version": "1.0.0",
  "description": "Enhanced production ready eleventy config.",
  "keywords": [
    "eleventy",
    "ssg",
    "context",
    "typescript",
    "nexim"
  ],
  "homepage": "https://github.com/the-nexim/application-toolkit/tree/next/packages/eleventy-config#readme",
  "bugs": {
    "url": "https://github.com/the-nexim/application-toolkit/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/the-nexim/application-toolkit",
    "directory": "packages/eleventy-config"
  },
  "license": "AGPL-3.0-only",
  "author": "S. Amir Mohammad Najafi <njfamirm@gmail.com> (https://www.njfamirm.ir)",
  "contributors": [
    "Arash Ghardashpoor <arash.qardashpoor@gmail.com> (https://www.agpagp.ir)"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.mjs",
      "require": "./dist/main.cjs"
    }
  },
  "main": "./dist/main.cjs",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "files": [
    "**/*.{js,mjs,cjs,map,d.ts,html,md,LEGAL.txt}",
    "LICENSE",
    "!**/*.test.js",
    "!demo/**/*"
  ],
  "scripts": {
    "build": "wireit",
    "test": "wireit",
    "watch": "wireit"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@alwatr/logger": "^5.0.0",
    "@alwatr/nano-build": "^5.0.0",
    "@alwatr/type-helper": "^5.0.0",
    "@nexim/typescript-config": "^1.0.1",
    "@swc/html": "^1.10.1",
    "ava": "^6.2.0",
    "cssnano": "^7.0.6",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.0",
    "postcss": "^8.4.49",
    "postcss-import": "^16.1.0",
    "postcss-preset-env": "^10.1.2",
    "postcss-variable-compress": "^3.0.0",
    "postcss-viewport-unit-fallback": "^1.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "wireit": "^0.14.9",
    "workbox-build": "^7.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:11ty"
      ]
    },
    "build:11ty": {
      "command": "yarn node script/build.mjs",
      "files": [
        "site",
        "assets",
        "dist/es"
      ],
      "output": [
        "dist",
        "!dist/es"
      ],
      "dependencies": [
        "build:es"
      ]
    },
    "build:es": {
      "command": "nano-build --preset=weaver",
      "files": [
        "src",
        "tsconfig.json"
      ],
      "clean": "if-file-deleted",
      "output": [
        "dist/es",
        "tsconfig.tsbuildinfo"
      ]
    },
    "serve": {
      "command": "wds",
      "service": true
    },
    "start": {
      "dependencies": [
        "build",
        "serve"
      ]
    },
    "watch": {
      "dependencies": [
        "watch:11ty",
        "serve"
      ]
    },
    "watch:11ty": {
      "command": "yarn run build:11ty -- --watch",
      "service": true,
      "dependencies": [
        "watch:es"
      ]
    },
    "watch:es": {
      "command": "yarn run build:es -- --watch",
      "service": true
    }
  }
}
